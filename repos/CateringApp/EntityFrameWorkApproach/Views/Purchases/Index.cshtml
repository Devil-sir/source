@model IEnumerable<DAL.Models.Purchase>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>@Html.ActionLink("Checkout", "Checkout")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fp.FoodProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fp.FoodProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseId })
            </td>
        </tr>
    }

</table>

<p>@Html.DisplayNameFor(model => model.TotalPrice)</p>

<div class="form-actions no-color">
    @Html.ActionLink("Back to List", "Index", "Purchases")
</div>